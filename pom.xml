    <!-- project properties -->
    <test.resources.base.dir>${project.basedir}/src/test/resources</test.resources.base.dir>
    <suites.base.dir>${test.resources.base.dir}/ru/levelp/at</suites.base.dir>
    <lesson.suite.base.dir>${suites.base.dir}/lesson0304/build/unit/testing/tools/suite/hooks</lesson.suite.base.dir>
  </properties>

  <profiles>
    <profile>
      <id>data-provider-tests</id>

      <properties>
        <lesson.suite.base.dir>${suites.base.dir}/lesson0304/build/unit/testing/tools/suite</lesson.suite.base.dir>
        <test.suite.name>dataprovider/DataProviderExampleSuite.xml</test.suite.name>
      </properties>
    </profile>

    <profile>
      <id>groups-tests</id>

      <properties>
        <lesson.suite.base.dir>${suites.base.dir}/lesson0304/build/unit/testing/tools/suite</lesson.suite.base.dir>
        <test.suite.name>group/BeforeAfterGroupsExampleSuite.xml</test.suite.name>
      </properties>
    </profile>

    <profile>
      <id>inheritance-tests</id>

      <properties>
        <lesson.suite.base.dir>${suites.base.dir}/lesson0304/build/unit/testing/tools/suite</lesson.suite.base.dir>
        <test.suite.name>inheritance/BeforeAfterTestExampleSuite.xml</test.suite.name>
      </properties>
    </profile>

    <profile>
      <id>allure-rest-assured</id>

      <properties>
        <lesson.suite.base.dir>${suites.base.dir}/lesson1011/cicd/api</lesson.suite.base.dir>
        <test.suite.name>AllureApiRestAssuredSuite.xml</test.suite.name>
      </properties>
    </profile>

    <profile>
      <id>allure-ui</id>
      <activation>
        <activeByDefault>false</activeByDefault>
      </activation>

      <properties>
        <lesson.suite.base.dir>${suites.base.dir}/lesson1011/cicd/ui</lesson.suite.base.dir>
        <test.suite.name>AllureUiSuite.xml</test.suite.name>
      </properties>
    </profile>

    <profile>
      <id>design-patterns-factory-method-suite</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>

      <properties>
        <lesson.suite.base.dir>${suites.base.dir}/lesson12/design/patterns/factory/method</lesson.suite.base.dir>
        <test.suite.name>WebDriverFactoryMethodExampleSuite.xml</test.suite.name>
      </properties>
    </profile>
  </profiles>

